{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}/apps/backend",
      "internalConsoleOptions": "neverOpen",
      "port": 9229,
      "smartStep": true
    },
    {
      "name": "Debug HDF Converters Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/libs/hdf-converters/node_modules/.bin/jest",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}/libs/hdf-converters",
      "internalConsoleOptions": "neverOpen",
      "port": 9229,
      "smartStep": true
    },
    {
      "type": "node-terminal",
      "name": "Run Script: start:dev",
      "request": "launch",
      "command": "yarn run start:dev",
      "cwd": "${workspaceFolder}/apps/backend"
    }
  ]
}